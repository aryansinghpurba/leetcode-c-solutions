int canCompleteCircuit(int* gas, int gasSize, int* cost, int costSize) {
    int gain=0;
    int current_gas=0;
    int total_gas=0;
    int start_index=0;
    for(int i=0;i<gasSize;i++){
        gain=gas[i]-cost[i];
        current_gas+=gain;
        total_gas+=gain;

        if(current_gas<0){
            start_index=i+1;
            current_gas=0;
        }
    }
    return (total_gas>=0) ? start_index :-1;
    
}
