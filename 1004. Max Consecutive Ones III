#include <stdio.h>

int longestOnes(int* nums, int numsSize, int k) {
    int left = 0, right = 0;
    int zeroCount = 0, maxLen = 0;

    while (right < numsSize) {
        if (nums[right] == 0) {
            zeroCount++;
        }

        while (zeroCount > k) {
            if (nums[left] == 0) {
                zeroCount--;
            }
            left++;
        }

        int windowSize = right - left + 1;
        if (windowSize > maxLen) {
            maxLen = windowSize;
        }
        right++;
    }

    return maxLen;
}
