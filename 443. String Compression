int compress(char* chars, int charsSize) {
    int index=0;
    int i=0;
    while(i<charsSize){
        char currentchar=chars[i];
        int count=0;
        while(i<charsSize && currentchar==chars[i]){
            i++;
            count++;
        }
        chars[index++]=currentchar;
            if(count>1){
                char buffer[10];
                int len =sprintf(buffer,"%d",count);
                for(int j=0;j<len;j++){
                    chars[index++]=buffer[j];
                
            }
        }
    }
        return index;
    
    
}
